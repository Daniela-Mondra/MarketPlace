<div class="container mt-3 mb-5">
  <h1>My orders</h1>

  <% @sales.reverse.each do |sale| %>
    <div class="card-custom card shadow-lg mb-3">
      <div class="card card-body">
        <p class="m-0"><strong><%= sale.created_at.strftime("%d de %B del %Y") %></strong></p>
      </div>
      <div class="card card-body">
        <div class="row d-flex align-center">
          <div class="col-2 d-flex justify-content-center align-items-center">
            <%= cl_image_tag sale.vinyl.photo.key, alt: sale.vinyl.title, class: "img-fluid" %>
          </div>
          <div class="col-5 d-flex flex-column justify-content-center">
            <strong>Title:</strong>
            <p><%= sale.vinyl.title %></p>
            <strong>Artist:</strong>
            <p><%= sale.vinyl.artist %></p>
            <strong>Price:</strong>
            <p class="m-0">$ <%= sale.vinyl.price.to_f %></p>
          </div>
          <div class="col-4 d-flex flex-column">
            <div class="div">
              <strong>Seller:</strong>
              <div class="div d-flex my-3 align-items-center justify-content-center">
                <%= cl_image_tag sale.vinyl.user.photo.key, class: "avatar me-3", alt: "dropdown menu", crop: :fill %>
                <p class="my-0"><%= sale.vinyl.user.first_name %> <%= sale.vinyl.user.last_name %></p>
              </div>
            </div>
            <%= link_to 'Add a review for this seller', new_sale_review_path(sale), class: "btn btn-warning btn me-2 text-white" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
