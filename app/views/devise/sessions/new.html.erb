<div class="background-image py-3" style="background-image: url(<%= asset_path 'people.jpg' %>); background-size: cover; background-position: center;">
  <div class="row justify-content-center">
    <div class="col-5">
      <div class="container-custom m-3 p-4 border" style="background-color: rgba(255, 255, 255);">
        <h2 class="text-center">Log in</h2>

        <div class="container">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, "Log in", class: "btn btn-success" %>
              <p class="mt-2"><%= render "devise/shared/links" %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
