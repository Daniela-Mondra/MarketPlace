<div class="row justify-content-center mb-5">
  <div class="col-sm-8 my-3" id="scroll-target" data-scroll="<%= params[:scroll].present? %>">
    <%= form_with url: root_path, method: :get, class: "d-flex", local: false do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
        <%= hidden_field_tag :scroll, true %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
